{
  "manifest_version": 2,
  "name": "Streamer is live",
  "description": "A chrome extension to quickly check if your favorite streamers are online and what category theyâ€™re currently streaming on.",
  "version": "0.8",
  "author": "Jeusto - Arhun Saday",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "/javascript/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/offline-icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "/javascript/alert.js"
      ],
      "match_about_blank": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/offline-icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "declarativeContent"
  ]
}